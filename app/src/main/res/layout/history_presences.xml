<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/dateTV"
        android:textSize="20sp"
        android:text="Date"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:background="@color/very_light_primary"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dateTV"
            android:textColor="@color/primary"
            android:background="@color/grey" />
    <TextView
        android:id="@+id/onDutyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTV"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Jam masuk : "
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/onDutyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTV"
        android:layout_toEndOf="@+id/onDutyText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/offDutyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onDutyTV"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Jam pulang : "
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/offDutyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onDutyTV"
        android:layout_toEndOf="@+id/offDutyText"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp"/>




</RelativeLayout>