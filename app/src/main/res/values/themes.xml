<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VSGOJuniorMobileProgrammer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.VSGOJuniorMobileProgrammer" parent="Base.Theme.VSGOJuniorMobileProgrammer" />

    <style name="Theme.VSGOJuniorMobileProgrammer.Fullscreen" parent="Theme.VSGOJuniorMobileProgrammer">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.VSGOJuniorMobileProgrammer.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.VSGOJuniorMobileProgrammer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>